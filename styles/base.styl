// -------------------------------------
//   Variables
// -------------------------------------

$white = rgb(255, 255, 255)
$black = rgb(0, 0, 0)
$goBlue = rgb(0, 40, 84)
$maize = rgb(255, 203, 11)

$mobile = "screen and (min-width: 320px)"
$iphone6 = "screen and (min-width: 360px)"
$iphonePlus = "screen and (min-width: 414px)"
$tablet = "screen and (min-width: 768px)"
$desktop = "screen and (min-width: 960px)"

// -------------------------------------
//   Layout
// -------------------------------------

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  width 100%

main
  position fixed
  top 0
  left 0
  right 0
  bottom 0

section
  position absolute
  width 100%
  height 100%
  overflow auto
  
  @media $desktop
    top 50px
      
.l-section-container
  width 100%
  max-width 960px
  margin 0 auto
  background rgba($goBlue, 0.15)
